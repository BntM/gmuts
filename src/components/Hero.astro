---
interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
}

const { title, subtitle, ctaText, ctaLink } = Astro.props;
---

<section class="hero">
  <div class="hero-container">
    <h1>{title}</h1>
    {subtitle && <p class="subtitle">{subtitle}</p>}
    {ctaText && ctaLink && (
      <a href={ctaLink} class="cta-button">{ctaText}</a>
    )}
  </div>
</section>

<style>
  .hero {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    padding: 6rem 1rem;
    text-align: center;
  }

  .hero-container {
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    font-size: 3rem;
    color: #fff;
    margin: 0 0 1rem;
    line-height: 1.2;
  }

  .subtitle {
    font-size: 1.25rem;
    color: #aaa;
    margin: 0 0 2rem;
  }

  .cta-button {
    display: inline-block;
    background: #e94560;
    color: #fff;
    padding: 0.75rem 2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
    transition: background 0.2s;
  }

  .cta-button:hover {
    background: #d63d56;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }
  }
</style>
