---
interface Props {
  siteName?: string;
}

const { siteName = "GMUTS" } = Astro.props;
---

<nav>
  <div class="nav-container">
    <a href="/" class="logo">{siteName}</a>
    <ul class="nav-links">
      <li><a href="/">Home</a></li>
      <li><a href="/blog">Blog</a></li>
      <li><a href="/about">About</a></li>
    </ul>
  </div>
</nav>

<style>
  nav {
    background: #f5eda8;
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
    border-bottom: 1px solid #e5dda0;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: #17532E;
    text-decoration: none;
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: #333;
    text-decoration: none;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: #17532E;
  }
</style>
