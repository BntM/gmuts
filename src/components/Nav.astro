---
import navigation from '../data/navigation.json';
import site from '../data/site.json';
---

<nav>
  <div class="nav-container">
    <a href="/" class="logo">{site.title}</a>
    <ul class="nav-links">
      {navigation.main.map((item) => (
        <li><a href={item.url}>{item.label}</a></li>
      ))}
    </ul>
  </div>
</nav>

<style>
  nav {
    background: #FFF;
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
    border-bottom: 1px solid #e5dda0;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: #17532E;
    text-decoration: none;
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: #333;
    text-decoration: none;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: #17532E;
  }
</style>
