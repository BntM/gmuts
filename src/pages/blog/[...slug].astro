---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={`${post.data.title} - GMUTS`} description={post.data.description}>
  <article class="blog-post">
    {post.data.image && (
      <div class="hero-image">
        <img src={post.data.image} alt={post.data.title} />
      </div>
    )}
    <div class="post-header">
      <time datetime={post.data.date.toISOString()}>
        {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
      </time>
      <h1>{post.data.title}</h1>
      <p class="description">{post.data.description}</p>
    </div>
    <div class="post-content">
      <Content />
    </div>
    <div class="post-footer">
      <a href="/blog">&larr; Back to Blog</a>
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .hero-image {
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 2rem;
  }

  .hero-image img {
    width: 100%;
    aspect-ratio: 16/9;
    object-fit: cover;
  }

  .post-header {
    margin-bottom: 2rem;
  }

  .post-header time {
    color: #666;
    font-size: 0.875rem;
  }

  .post-header h1 {
    margin: 0.5rem 0;
    font-size: 2.5rem;
    line-height: 1.2;
    color: #17532E;
  }

  .description {
    color: #555;
    font-size: 1.125rem;
    margin: 0;
  }

  .post-content {
    line-height: 1.8;
  }

  .post-content :global(h2) {
    margin-top: 2rem;
    color: #17532E;
  }

  .post-content :global(pre) {
    background: #f5eda8;
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    border: 1px solid #e5dda0;
  }

  .post-content :global(code) {
    background: #f5eda8;
    padding: 0.2rem 0.4rem;
    border-radius: 2px;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .post-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e5dda0;
  }

  .post-footer a {
    color: #17532E;
    text-decoration: none;
  }

  .post-footer a:hover {
    text-decoration: underline;
  }
</style>
